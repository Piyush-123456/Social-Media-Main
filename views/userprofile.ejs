<%- include("partials/header") %>
    <%- include("partials/nav") %>

        <div class="header-image">
            <h1 class="header-title">&lt;/&gt;SparkWave</h1>
        </div>

        <div class="profile-container">
            <div class="profile-info">
                <img class="avatar-image" src="<%= specific_user.avatar.thumbnailUrl ? specific_user.avatar.thumbnailUrl : 'https://th.bing.com/th/id/OIP.Ps-WjXJNyJJ8R696WKbjggHaHa?w=194&h=194&c=7&r=0&o=5&dpr=1.3&pid=1.7' %>" alt="specific_user Avatar">

                <h3 class="profile-name">

                    <%= specific_user.fullname %>
                        <br>
                </h3>
                <h4 style="font-size: 18px;">
                    <%=specific_user.username%>

                </h4>

            </div>

            <div class="stats">
                <div class="stat-item">
                    <h1 class="stat-title">
                        <img src="https://img.icons8.com/?size=100&id=xrSn9N56jUGh&format=png&color=000000" alt="">
                        <%= specific_user.posts.length %>
                    </h1>
                    <h1>
                        Posts
                    </h1>
                </div>
                <div class="stat-item">
                    <h1 class="stat-title">
                        <img src="https://img.icons8.com/?size=100&id=10993&format=png&color=000000" alt="">
                        <%= specific_user.friends.length %>
                    </h1>

                    <h1 class="stat-title">
                        Friends
                    </h1>
                </div>
            </div>

        </div>
        
        <hr>
        <!-- <%=JSON.stringify(user.posts)%> -->
        <div class="posts-container">
            <% if (specific_user.posts.length===0) { %>
                <h1>No Posts Yet</h1>
                <% } else { %>
                    <% specific_user.posts.forEach(post=> { %>
                        <div class="post-card">
                            <!-- Post Image -->
                            <img class="post-image" src="<%= post.image.url %>" alt="<%= post.title %>">

                            <div class="user-viral">
                                <div class="user-viral-comp">
                                    <a class="text-decoration-none" href="/post/likes/<%= post._id %>">
                                        <i class="ri-heart-fill"
                                            style="font-size: 25px; color: <%= post.likes.includes(user._id) ? 'red' : 'black' %>;"></i>
                                    </a>
                                    <h5>
                                        <%= post.likes.length %>
                                    </h5>
                                </div>
                                <div class="user-viral-comp">
                                    <a class="text-decoration-none text-dark" href="/user/Comments/<%= post._id %>">
                                        <i style="font-size: 25px;" class="ri-chat-1-line"></i>
                                    </a>
                                    <!-- <h5>Comments</h5> -->
                                </div>
                                
                            </div>
                        </div>
                        <% }); %>
                            <% } %>
        </div>


