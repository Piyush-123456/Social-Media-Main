<%-include("partials/header")%>
<div style="padding-top:25px;height:100vh;width:100%;background-color: #E72E1E;">
    <h1 style="color: white;text-align: center;color : black;font-size: 2.5rem;  font-family: cursive; line-height: 4.5rem;color: white; ">
        &lt;/&gt;SparkWave</h1>
    <form  class="" action="/user/register" method="post" style="border-radius: 80px;font-family: gilroy;max-width: 750px;height: 80vh; margin: auto; padding: 60px; border: 1px solid #ddd; border-radius: 40px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); background-color: white;">
        <h1 style="text-align: center;font-weight: bolder; font-size:2.8rem ;">Sign up</h1>
        <h3 style="text-align: center; font-weight: 200;font-size: 1.1rem;">
            See what SparkWave is capable of for free
        </h3>
        <div class="form-group" style="outline: none;">
            <label for="fullname" style="font-weight: bold;">Full Name</label>
            <input type="text" name="fullname" id="fullname" placeholder="Enter your name" style="width: 100%; padding: 10px; margin: 5px 0 15px; border: 1px solid #ccc; border-radius: 4px;">
        </div>
        <div class="form-group" style="outline: none;">
            <label for="username" style="font-weight: bold;">Email</label>
            <input type="text" name="username" id="username" placeholder="email@email.com" style="width: 100%; padding: 10px; margin: 5px 0 15px; border: 1px solid #ccc; border-radius: 4px;">
        </div>
        <div class="form-group" style="outline: none;">
            <label for="password" style="font-weight: bold;">Password</label>
            <input type="password" name="password" id="password" placeholder="************" style="width: 100%; padding: 10px; margin: 5px 0 15px; border: 1px solid #ccc; border-radius: 4px;">
        </div>
        <div class="form-group" style="outline: none;">
            <label for="contact" style="font-weight: bold;">Contact Number</label>
            <input type="number" name="contact" id="contact" placeholder="Contact Number" style="width: 100%; padding: 10px; margin: 5px 0 15px; border: 1px solid #ccc; border-radius: 4px;">
        </div>
        <button type="submit" class="btn" style="background-color: #E72E1E;width: 100%; padding: 10px; border: none; border-radius: 4px; color: white; font-size: 16px; cursor: pointer;">
            Register
        </button>
        <p class="mt-3" style="text-align: center;">
            Already have an account? <a class="text-decoration-none" href="/">
                Login
            </a>
        </p>
    </form>
</div>

        <%-include("partials/footer")%>