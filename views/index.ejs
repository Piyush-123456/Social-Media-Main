<%-include("partials/header")%>
    <div class="d-flex" style="height: 100vh; width: 100%; background-color: red;">
        <div class="left"
            style="height: 100vh; width: 50%; background-color: white; display: flex; flex-direction: column; justify-content: center; align-items: center; color: white; padding: 20px;">
            <div style="text-align: center;">
                <h2 style=" color : black;font-size: 1.8rem; font-weight: bolder; font-family: gilroy;">WELCOME TO</h2>
                <h1 style=" color : black;font-size: 4rem;  font-family: cursive; line-height: 4.5rem; color : #E72E1E">
                    &lt;/&gt;SparkWave</h1>
                <p style=" color : black;font-size: 1.1rem;font-family: gilroy; margin-bottom: 2rem;">Log in to get the
                    moment updates on the things that interest you.</p>
            </div>
            <form action="/user/login" method="post"
                style="width: 100%; color: black; max-width: 600px; background-color: white; padding: 20px; border-radius: 8px;font-family: gilroy; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email address</label>
                    <div class="input-group">
                        <div class="input-group-prepend" style="height: 40px;">
                            <span class="input-group-text "><i class="fas fa-envelope" style="height: 25px;"></i></span>
                        </div>
                        <input placeholder="email@email.com" type="text" class="form-control" name="username">
                    </div>
                    <div class="form-text">We'll never share your email with anyone else.</div>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <div class="input-group">
                        <div class="input-group-prepend" style="height: 40px;">
                            <span class="input-group-text"><i style="height: 26px;" class="fas fa-lock"></i></span>
                        </div>
                        <input type="password" class="form-control" placeholder="******************" name="password">
                    </div>
                </div>
                <a href="/sendMail" class="text-decoration-none mb-2" style="float: right;">Forget password?</a>
                <button type="submit" class="btn"
                    style="width: 100%;background-color:#E72E1E; color: white;">Login</button>
            </form>
            <p style="color :black;font-family: gilroy; font-size: 1.01rem;margin-top: 20px;">
                Don't have an account?
                <a class="text-decoration-none" href="/register">
                    Register
