<%- include("partials/header") %>
    <%- include("partials/nav") %>

        <div class="container">
            <div class="sidebar">
                <section>

                    <div class="inner-container">
                        <div class="card">
                            <div class="card-inner" style="--clr:#d3b19a;">
                                <div class="box">
                                    <div class="imgBox">
                                        <img src="https://plus.unsplash.com/premium_photo-1673792686302-7555a74de717?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTN8fGdpcmxzfGVufDB8fDB8fHww"
                                            alt="Trust & Co.">
                                    </div>
                                    <div class="icon">
                                        <a href="#" class="iconBox text-decoration-none">
                                            <span class="material-symbols-outlined">
                                                <i style="font-size: 35px;" class="ri-arrow-right-up-line"></i>
                                            </span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="content">
                                <h3>Get our <br> Premium Membership</h3>
                                <!-- <p>Fill out the form and the algorithm will offer the right team of experts</p> -->
                                <ul>
                                    <li style="--clr-tag:#d3b19a;" class="branding">Branding</li>
                                    <li style="--clr-tag:#70b3b1;" class="packaging">Trust</li>
                                </ul>
                            </div>
                        </div>
                        <!-- Repeat the card structure for additional cards -->
                    </div>
                </section>
            </div>

            <div class="main-content">
                <form action="/post/create" method="post" enctype="multipart/form-data" class="post-form">
                    <div class="post-input-container">
                        <div class="post-header">
                            <img class="user-avatar"
                                src="<%= user.avatar.url || 'data:image/jpeg;base64,' %>"
                                alt="User Image">
                            <input style="font-family: gilroy; font-size: 15px;" class="post-title" name="title"
                                type="text" placeholder="Starts a post by Writing...">
                        </div>
                        <div class="post-footer">
                            <input class="avatar-input" hidden type="file" name="image">
                            <div class="post-content">
                                <img class="upload-icon"
                                    src="https://img.icons8.com/?size=100&id=53386&format=png&color=000000"
                                    alt="Upload">
                                <h5>
                                    Media
                                </h5>
                            </div>

                            <button style="background-color: #E72E1E;" class="btn  ps-3 pe-3 text-white"
                                type="submit">Post</button>
                        </div>
                    </div>
                </form>

                <div class="posts">
                    <% posts.forEach(post=> { %>
                        <div class="post-card">
                            <div class="user-info">
                                <img src="<%=post.user.avatar.url %>" alt="">
                                <a class="text-decoration-none cursor-pointer text-dark"
                                    href="/user/userprofile/<%=post.user._id%>">
                                    <%=post.user.fullname%>
                                </a>
                            </div>
                            <img class="post-image"
                                src="<%= post.image.thumbnailUrl || 'https://th.bing.com/th/id/OIP.55ULTLoXRwDVDcEZZoORMwHaHa?w=195&h=196&c=7&r=0&o=5&dpr=1.3&pid=1.7' %>"
                                alt="Post Image">

                            <div class="user-viral">
                                <div class="user-viral-comp">
                                    <a class="text-decoration-none" href="/post/likes/<%=post._id%>">
                                        <% const isLiked = post.likes && post.likes.includes(user._id.toString()); %>
                                        <i class="ri-heart-fill"
                                           style="font-size: 25px; color: <%= isLiked ? 'red' : 'black' %>;">
                                        </i>


                                    </a>
                                    <h5>
                                        <%=post.likes.length%>
                                            Likes
                                    </h5>
                                </div>
                                <div class="user-viral-comp">
                                    <a class="text-decoration-none text-dark" href="/user/Comments/<%=post._id%>">
                                        <i style="font-size: 25px;" class="ri-chat-1-line"></i>
                                    </a>

                                    <h5>Comments</h5>
                                </div>

                            </div>
                            <div class="post-details">
                                <h3 style="font-size: 15px;" class="post-title">
                                    <b>
                                        <%=post.user.username%> :
                                    </b>
                                    <%= post.title %>
                                </h3>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>

            <div class="sidebar2">
                <div class="sidebar2-inner">
                    <h1 style="font-family: gilroy; font-size: 20px; font-weight: 800;text-align: center;">Today's Event
                        🎉</h1>
                    <hr>
                    <% users.forEach((singleuser)=> { %>
                        <% if (singleuser.date===userdate && singleuser.fullname !==user.fullname) { %>
                            <div class="event">
                                <img src="https://th.bing.com/th/id/OIP.B2jSDhREKXx_XmBwn2sydgHaHw?w=169&h=180&c=7&r=0&o=5&dpr=1.3&pid=1.7"
                                    alt="User Image">
                                <div class="event-details">
                                    <span>
                                        <%= singleuser.fullname %>
                                    </span>
                                </div>
                            </div>
                            <% } %>
                                <% }) %>
                </div>
            </div>

        </div>

        </div>

