        </style>

        <%- include("partials/footer") %>

            <script>
                const avatarImage = document.querySelector('.upload-icon');
                const avatarInput = document.querySelector('.avatar-input');
                const avatarForm = document.querySelector('.post-form');

                avatarImage.addEventListener('click', () => {
                    avatarInput.click();
                });

                avatarInput.addEventListener('change', () => {
                    avatarForm.submit();
                });


            </script>